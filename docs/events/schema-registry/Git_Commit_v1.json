{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://your-org.com/events/Git_Commit_v1.json",
  "title": "Git_Commit.v1",
  "type": "object",
  "required": ["type", "schema_version", "ts", "commitHash", "author", "message"],
  "properties": {
    "type": { "const": "Git_Commit" },
    "schema_version": { "const": "v1" },
    "ts": { "type": "string", "format": "date-time", "description": "Timestamp of the commit" },
    "commitHash": { "type": "string", "description": "Commit hash" },
    "author": { "type": "string", "description": "Author of the commit" },
    "message": { "type": "string", "description": "Commit message" },
    "filesChanged": { "type": "array", "items": { "type": "string" }, "description": "List of files changed" }
  },
  "additionalProperties": true
}
