{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://your-org.com/events/Git_Commit_v1.json",
  "title": "Git_Commit.v1",
  "description": "Event emitted when a commit is made to the repository.",
  "allOf": [
    { "$ref": "https://your-org.com/events/common/EventEnvelope_v1.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "Git_Commit" },
        "schemaVersion": { "const": "v1" },
        "commitHash": { "type": "string", "description": "Commit hash" },
        "author": { "type": "string", "description": "Author of the commit" },
        "message": { "type": "string", "description": "Commit message" },
        "filesChanged": { "type": "array", "items": { "type": "string" }, "description": "List of files changed" }
      },
      "required": ["commitHash", "author", "message"],
      "additionalProperties": false
    }
  ],
  "examples": [
    {
      "type": "Git_Commit",
      "schemaVersion": "v1",
      "ts": "2025-11-27T12:00:00Z",
      "eventId": "3e0c5dbf-5fac-4f2c-9ea4-4c2db0ec1fee",
      "commitHash": "a1c9f...",
      "author": "yumin731598",
      "message": "Updated PRD for new API endpoint",
      "filesChanged": ["docs/prd/prd-042.md"]
    }
  ]
}
