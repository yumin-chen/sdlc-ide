{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://your-org.com/events/Policy_Violation_v1.json",
  "title": "Policy_Violation.v1",
  "type": "object",
  "required": ["type", "schema_version", "ts", "policyId", "violationDetails", "actor"],
  "properties": {
    "type": { "const": "Policy_Violation" },
    "schema_version": { "const": "v1" },
    "ts": { "type": "string", "format": "date-time", "description": "Timestamp of the event" },
    "policyId": { "type": "string", "description": "Policy identifier" },
    "violationDetails": { "type": "string", "description": "Details of the violation" },
    "actor": { "type": "string", "description": "Actor responsible for the violation" },
    "documentId": { "type": "string", "description": "Document identifier" }
  },
  "additionalProperties": true
}
