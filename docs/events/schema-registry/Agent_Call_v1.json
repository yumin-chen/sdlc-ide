{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://your-org.com/events/Agent_Call_v1.json",
  "title": "Agent_Call.v1",
  "description": "Event emitted when an agent makes a call to another agent.",
  "x-internal": true,
  "allOf": [
    { "$ref": "https://your-org.com/events/common/EventEnvelope_v1.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "Agent_Call" },
        "schemaVersion": { "const": "v1" },
        "from": { "type": "string", "description": "Source agent" },
        "to": { "type": "string", "description": "Destination agent" },
        "action": { "type": "string", "description": "Action performed" },
        "callTrace": { "type": "string", "description": "Trace identifier for the call" },
        "status": { "type": "string", "enum": ["enqueued", "success", "failed"], "description": "Status of the call" }
      },
      "required": ["from", "to", "action", "callTrace", "status"],
      "additionalProperties": false
    }
  ],
  "examples": [
    {
      "type": "Agent_Call",
      "schemaVersion": "v1",
      "ts": "2025-11-27T10:30:00Z",
      "eventId": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
      "from": "PRM",
      "to": "TSM",
      "action": "request-tsd-check",
      "callTrace": "trace-xxx",
      "status": "enqueued"
    }
  ]
}
