{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://your-org.com/events/common/EventEnvelope_v1.json",
  "title": "EventEnvelope.v1",
  "description": "Base schema for all event types.",
  "type": "object",
  "$defs": {
    "uuid": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
      "description": "Unique identifier in UUID format"
    }
  },
  "properties": {
    "type": { "type": "string", "description": "Type of the event" },
    "schemaVersion": { "type": "string", "description": "Version of the schema" },
    "ts": { "type": "string", "format": "date-time", "description": "Timestamp of the event" },
    "eventId": { "$ref": "#/$defs/uuid", "description": "Unique event identifier" },
    "traceId": { "$ref": "#/$defs/uuid", "description": "Correlation ID for tracing the flow across agents" },
    "eventSource": { "type": "string", "description": "Subsystem or service that produced this event" },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Flexible metadata field"
    }
  },
  "required": ["type", "schemaVersion", "ts", "eventId"],
  "additionalProperties": true
}
